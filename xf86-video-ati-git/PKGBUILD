# Contributor: Flamelab <panosfilip at gmail dot com>

pkgname=xf86-video-ati-git
pkgver=20130112
pkgrel=1306
pkgdesc="X.org ati video driver"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
provides=('xf86-video-ati')
depends=('libpciaccess-git' 'libdrm-git' 'udev' 'pixman-git' 'mesa-git')
makedepends=('xorg-server-devel-git' 'libdrm-git' 'xf86driproto-git' 'git' 'glproto-git')
conflicts=('xorg-server<1.11.0' 'xf86-video-ati')
options=('!libtool')
license=('custom')

_gitroot='git://anongit.freedesktop.org/xorg/driver/xf86-video-ati'
_gitname="xf86-video-ati"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --enable-glamor
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install 
}
