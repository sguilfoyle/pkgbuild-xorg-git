# Contributor: Flamelab <panosfilip at gmail dot com>

_realver=7.1.99
_gitroot='git://anongit.freedesktop.org/xorg/driver/xf86-video-ati'
_gitname="xf86-video-ati"

pkgname=xf86-video-ati-git
pkgver=20130517
pkgrel=1614
pkgdesc="X.org ati video driver"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
provides=('xf86-video-ati=${_realver}')
depends=('libpciaccess' 'libdrm' 'udev' 'pixman' 'ati-dri' 'glamor')
makedepends=('xorg-server-devel-git' 'xf86driproto' 'git' 'glproto')
conflicts=('xorg-server<1.11.0' 'xf86-video-ati')
options=('!libtool')
license=('custom')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --enable-glamor
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install 
}

