# Contributor: Flamelab <panosfilip at gmail dot com>

_realver=7.1.99
pkgname=xf86-video-ati-git
pkgver=20130311
pkgrel=2230
pkgdesc="X.org ati video driver"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
provides=('xf86-video-ati=${_realver}')
depends=('libpciaccess>=0.13.1' 'libdrm>=2.4.42' 'udev' 'pixman>=0.29.3' 'ati-dri>=9.2.0' 'glamor>=0.5.0')
makedepends=('xorg-server-devel-git' 'xf86driproto>=2.1.1' 'git' 'glproto>=1.4.16')
conflicts=('xorg-server<1.11.0' 'xf86-video-ati')
options=('!libtool')
license=('custom')

_gitroot='git://anongit.freedesktop.org/xorg/driver/xf86-video-ati'
_gitname="xf86-video-ati"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --enable-glamor
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install 
}

