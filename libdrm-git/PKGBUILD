# Arch libdrm Maintainers:
#Jan de Groot
#Andreas Radke

pkgname=libdrm-git
pkgver=20130102
pkgrel=1
pkgdesc="Userspace interface to kernel DRM services"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libpciaccess')
provides=('libdrm=2.4.40')
makedepends=('git' 'cairo' 'udev' 'valgrind')
options=('!libtool')
url="http://dri.freedesktop.org/"
conflicts=('libdrm')

_gitroot='git://git.freedesktop.org/git/mesa/drm'
_gitname='drm'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  sed -i 's/PKG_CHECK_MODULES(PTHREADSTUBS, pthread-stubs)//' configure.ac

  ./autogen.sh --prefix=/usr \
      --enable-udev \
      --enable-intel \
      --enable-radeon \
      --enable-nouveau \
      --enable-vmwgfx
  make V=1
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir" install
}
