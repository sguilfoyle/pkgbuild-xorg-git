# Maintainer: Joel Teichroeb <joel@teichroeb.net>

_realver=1.1.0
pkgname=wayland-git
pkgver=20130117
pkgrel=0955
pkgdesc="A modern display server."
arch=(i686 x86_64)
url="http://wayland.freedesktop.org"
provides=("wayland=${_realver}")
conflicts=('libwayland' 'wayland')
replaces=('libwayland-git')
license=('MIT')
depends=('libffi')
makedepends=('git' 'expat')
options=(!libtool)

_gitroot="git://anongit.freedesktop.org/wayland/wayland"
_gitname="wayland"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --disable-documentation
  make
}

package() {
  cd "${srcdir}/${_gitname}"
 make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et
