# Maintainer: Joel Teichroeb <joel@teichroeb.net>

pkgname=wayland-git
pkgver=20121212
pkgrel=4
pkgdesc="A modern display server."
arch=(i686 x86_64)
url="http://wayland.freedesktop.org"
provides=("libwayland-git=${pkgver}" "wayland=1.0.0")
conflicts=('libwayland-git' 'wayland')
replaces=('libwayland-git')
license=('MIT')
depends=('libffi')
makedepends=('git' 'expat')
options=(!libtool)

_gitroot="git://anongit.freedesktop.org/wayland/wayland"
_gitname="wayland"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git checkout -f && git clean -xfd && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --disable-documentation
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
