# Contributor: Ionut Biru <ibiru@archlinux.org>

_realver=0.7
_gitroot="git://people.freedesktop.org/~aplattner/libvdpau"
_gitname="libvdpau"

pkgname=lib32-libvdpau-git
pkgver=20131204
pkgrel=0740
pkgdesc="Nvidia VDPAU library (32-bit)"
arch=('x86_64')
url=http://cgit.freedesktop.org/~aplattner/libvdpau
license=('custom')
depends=('lib32-gcc-libs' "${_gitname}")
makedepends=('gcc-multilib' 'lib32-libx11')
options=('!libtool')
source=($_gitroot)
md5sums=(SKIP)
provides=('lib32-libvdpau=${_realver}')
conflicts=('lib32-libvdpau')
replaces=('lib32-libvdpau')

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  rm -rf "${pkgdir}"/{etc,usr/include,usr/share}
}
