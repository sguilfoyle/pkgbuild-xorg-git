# $Id: PKGBUILD 174258 2013-01-03 11:50:21Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=0.4.4
pkgname=libxcomposite-git
pkgver=20130222
pkgrel=1909
pkgdesc="X11 Composite extension library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libxfixes>=5.0')
makedepends=('xorg-util-macros-git' 'compositeproto>=0.4.2')
options=('!libtool')
provides=('libxcomposite=${_realver}')
conflicts=('libxcomposite')
replaces=('libxcomposite')

_gitroot="git://anongit.freedesktop.org/xorg/lib/libXcomposite"
_gitname="libxcomposite"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
# vim: ft=sh syn=sh et

