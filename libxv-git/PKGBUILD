# $Id: PKGBUILD 152795 2012-03-09 16:32:25Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.0.7
pkgname=libxv-git
pkgver=20130224
pkgrel=1907
pkgdesc="X11 Video extension library"
arch=('i686' 'x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('libxext>=1.3.1' 'videoproto>=2.3.1')
makedepends=('pkgconfig')
options=('!libtool')
provides=('libxv=${_realver}')
conflicts=('libxv')

_gitroot="git://anongit.freedesktop.org/xorg/lib/libXv"
_gitname="libxv"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --disable-static 
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}

# vim: ft=sh syn=sh et

