# Maintainer: Perry3D <perry3d@gmail.com>

pkgname=mesa-demos-git
pkgver=20130116
pkgrel=1238
pkgdesc="The mesa demos (glxinfo, glxgears, ...), built from the git master branch."
arch=(i686 x86_64)
url="http://mesa3d.org/"
license=('LGPL')
depends=('mesa-git' 'glew' 'glut')
makedepends=('git')
provides=('mesa-demos=8.0.1')
replaces=('mesa-demos')
conflicts=('mesa-demos')
options=()

_gitroot="git://anongit.freedesktop.org/mesa/demos"
_gitname="demos"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  sed -i -e '/texwrap/d' src/tests/Makefile.am
  ./autogen.sh --prefix=/usr
  make -C src/xdemos || return 1
  make -C src/xdemos DESTDIR="${pkgdir}" install || return 1
}
