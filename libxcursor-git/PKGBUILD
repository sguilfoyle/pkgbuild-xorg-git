# $Id: PKGBUILD 152769 2012-03-09 16:04:11Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Alexander Baldeck <alexander@archlinux.org>

_realver=1.1.14
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXcursor"
_gitname="libXcursor"

pkgname=libxcursor-git
pkgver=20131025
pkgrel=1305
pkgdesc="X cursor management library"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libxfixes>=5.0' 'libxrender>=0.9.7')
makedepends=('xorg-util-macros')
options=('!libtool')
provides=('libxcursor=${_realver}')
conflicts=('libxcursor')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}

# vim: ft=sh syn=sh et

