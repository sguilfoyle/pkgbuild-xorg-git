# $Id: PKGBUILD 152781 2012-03-09 16:19:36Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.0.8
pkgname=libxkbfile-git
pkgver=20130128
pkgrel=1447
pkgdesc="X11 keyboard file manipulation library"
arch=('i686' 'x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('libx11>=1.5.0')
makedepends=('xorg-util-macros-git')
options=('!libtool')
provides=('libxkbfile=${_realver}')
conflicts=('libxkbfile')

_gitroot='git://anongit.freedesktop.org/xorg/lib/libxkbfile'
_gitname='libxkbfile'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static 
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
# vim: ft=sh syn=sh et

