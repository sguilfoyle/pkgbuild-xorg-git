_realver=7.2.2
_gitroot='git://git.freedesktop.org/git/xorg/proto/xextproto'
_gitname='xextproto'

pkgname=xextproto-git
pkgver=20131101
pkgrel=1039
pkgdesc='X11 composite extention protocol specification and header files'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros' 'git')
provides=('xextproto=${_realver}')
conflicts=('xextproto')
source=($_gitroot fd-passing.patch)
md5sums=('SKIP'
         'f55cb4118f0fad1872cecb5ec7d5ebeb')

build() {
  cd "${srcdir}/${_gitname}"

  patch -Np1 -i ../fd-passing.patch

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

