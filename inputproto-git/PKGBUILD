# Maintainer: kfgz <kfgz at interia pl>
# Contributor: Cilyan Olowen <gaknar at gmail dot com>

pkgname=inputproto-git
pkgver=20121219
pkgrel=1
pkgdesc="X11 input extension wire protocol"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
license=('custom')
provides=('inputproto')
makedepends=('xorg-util-macros>=1.2' 'git')
conflicts=('inputproto')
#groups=('xorg')

_gitroot="git://git.freedesktop.org/git/xorg/proto/inputproto"
_gitname="inputproto"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git checkout -f && git clean -xfd && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"



  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -m755 -d "${pkgdir}"/usr/share/licenses/${pkgname}
  install -m644 "${srcdir}"/${_gitname-build}/COPYING \
                "${pkgdir}"/usr/share/licenses/${pkgname}/
}
