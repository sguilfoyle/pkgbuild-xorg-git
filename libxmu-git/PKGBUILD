# $Id: PKGBUILD 152301 2012-03-06 15:00:25Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=libxmu-git
pkgver=20130112
pkgrel=1704
pkgdesc="X11 miscellaneous micro-utility library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('libxext-git' 'libxt-git')
makedepends=('xorg-util-macros-git')
license=('custom')
options=('!libtool')
provides=('libxmu=1.1.1')
conflicts=('libxmu')

_gitroot="git://anongit.freedesktop.org/xorg/lib/libXmu"
_gitname="libxmu"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
