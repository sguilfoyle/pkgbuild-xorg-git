# $Id: PKGBUILD 151781 2012-03-02 18:55:43Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.4.5
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXfont"
_gitname="libXfont"

pkgname=libxfont-git
pkgver=20130404
pkgrel=2011
pkgdesc="X11 font rasterisation library"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('freetype2' 'libfontenc>=1.1.1' 'xproto>=7.0.23' 'fontsproto>=2.1.2')
makedepends=('xorg-util-macros-git' 'xtrans>=1.2.7')
options=('!libtool')
provides=('libxfont=${_realver}')
conflicts=('libxfont')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
# vim: ft=sh syn=sh et

