# $Id: PKGBUILD 174256 2013-01-03 11:42:05Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.1.4
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXdamage"
_gitname="libXdamage"

pkgname=libxdamage-git
pkgver=20131209
pkgrel=0731
pkgdesc="X11 damaged region extension library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libxfixes>=5.0' 'damageproto>=1.2.1')
makedepends=('pkg-config')
provides=('libxdamage=${_realver}')
conflicts=('libxdamage')
options=('!libtool')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
# vim: ft=sh syn=sh et

