pkgname=bigreqsproto-git
pkgver=20130111
pkgrel=1050
pkgdesc='X11 DRI extension wire protocol.'
url='http://xorg.freedesktop.org/'
arch=('any')
license=('custom')
makedepends=('xorg-util-macros-git' 'git')
provides=('bigreqsproto=1.1.2')
conflicts=('bigreqsproto')

_gitroot='git://git.freedesktop.org/git/xorg/proto/bigreqsproto'
_gitname='bigreqsproto'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim: ft=sh syn=sh et
