# Previous Contributor: vbmithr
# Contributor: Flamelab <panosfilip at gmail dot com>

_realver=0.6.0
_gitroot='git://anongit.freedesktop.org/xorg/driver/glamor'
_gitname="glamor"

pkgname=glamor-egl-git
pkgver=20140227
pkgrel=1405
pkgdesc="X.org OpenGL based 2D rendering acceleration library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('glibc' 'mesa-libgl-git' 'libdrm-git' 'libx11-git')
makedepends=('glibc' 'libxfixes-git' 'xorg-server-devel-git' 'xf86driproto-git' 'glproto-git' 'git')
provides=('glamor=${_realver}')
conflicts=('glamor')
replaces=('glamor' 'glamor-git')
options=('!libtool')
license=('custom')
source=($_gitroot)
sha1sums=('SKIP')

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh \
    --prefix=/usr \
    --disable-static \
    --enable-glx-tls
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et

