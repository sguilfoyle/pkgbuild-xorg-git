# Maintainer: Christoph Haag <haagch at studi.informatik.uni-stuttgart.de>

pkgname=glu-git
pkgver=20121209
pkgrel=0
pkgdesc="GL utility library for mesa builds from git after 2012-08-31"
arch=('i686' 'x86_64')
url="http://mesa.freedesktop.org/"
license=('LGPL')
provides=('glu')
depends=('libgl' 'gcc-libs')
makedepends=('mesa')
conflicts=('glu')
options=(!libtool)

_gitroot="git://cgit.freedesktop.org/mesa/glu/"
_gitname="glu"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git checkout -f && git clean -xfd && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
