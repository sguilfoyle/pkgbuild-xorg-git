# $Id: PKGBUILD 152795 2012-03-09 16:32:25Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=1.0.10
_gitroot="git://anongit.freedesktop.org/xorg/lib/libXv"
_gitname="libXv"

pkgname=lib32-libxv-git
pkgver=20140120
pkgrel=0154
pkgdesc="X11 Video extension library"
arch=('x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('lib32-libxext>=1.3.1' 'videoproto>=2.3.1')
makedepends=('pkgconfig')
options=('!libtool')
provides=('lib32-libxv=${_realver}')
conflicts=('lib32-libxv')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./autogen.sh \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-static 
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  rm -rf "${pkgdir}"/usr/{include,share}
}

# vim: ft=sh syn=sh et

