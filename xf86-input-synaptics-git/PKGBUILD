# Maintainer: Det <who@cares.com>
# Contributor: <Eugeny Borisov flekst@gmail.com>
# Based on [extra]'s xf86-input-synaptics

_realver=1.6.99
pkgname=xf86-input-synaptics-git
pkgver=20130327
pkgrel=0043
pkgdesc="X.Org synaptics Input driver - Git version"
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/xorg/driver/xf86-input-synaptics/"
license=('custom')
depends=('glibc')
makedepends=('xorg-server-devel-git' 'xf86driproto>=2.1.1' 'glproto>=1.4.16' 'git')
options=('!libtool' '!makeflags')
groups=('xorg-drivers' 'xorg')
provides=('xf86-input-synaptics=${_realver}')
conflicts=('xf86-input-synaptics' 'xorg-server<1.10.99.902')
backup=('etc/X11/xorg.conf.d/10-synaptics.conf')
source=(10-synaptics.conf)
md5sums=('3b81a81b958dfe3cac3cdef7ee85f1ce')

_gitroot=git://anongit.freedesktop.org/xorg/driver/xf86-input-synaptics
_gitname=xf86-input-synaptics

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --disable-unit-tests
  make
}

package(){
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -m755 -d "${pkgdir}/etc/X11/xorg.conf.d"
  install -m644 "${srcdir}/10-synaptics.conf" "${pkgdir}/etc/X11/xorg.conf.d/"
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"

  rm -rf "${pkgdir}/usr/share/X11"
}

# vim: ft=sh syn=sh et
