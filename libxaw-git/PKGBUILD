# $Id: PKGBUILD 160631 2012-06-02 21:31:52Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=libxaw-git
pkgver=20130112
pkgrel=1911
pkgdesc="X11 Athena Widget library"
arch=('i686' 'x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('libxmu-git' 'libxpm-git')
makedepends=('xorg-util-macros-git')
options=('!libtool')
provides=('libxaw=1.0.11')
conflicts=('libxaw')

_gitroot="git://anongit.freedesktop.org/xorg/lib/libXaw"
_gitname="libxaw"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
