# $Id: PKGBUILD 166179 2012-09-05 07:50:49Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_realver=0.6
pkgname=libvdpau-git
pkgver=20130308
pkgrel=1849
pkgdesc="Nvidia VDPAU library"
arch=(i686 x86_64)
url='http://cgit.freedesktop.org/~aplattner/libvdpau'
depends=('gcc-libs')
makedepends=('libx11')
conflicts=('nvidia-utils<190.42-2')
options=('!libtool')
license=('custom')
provides=('libvdpau=${_realver}')
conflicts=('libvdpau')
replaces=('libvdpau')

_gitroot="git://people.freedesktop.org/~aplattner/libvdpau"
_gitname="libvdpau"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install

  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}

# vim: ft=sh syn=sh et
