# $Id: PKGBUILD 151743 2012-03-01 23:01:51Z bisson $
# Contributor: Jan de Groot <jgc@archlinux.org>
# Maintainer: Gaetan Bisson <bisson@archlinux.org>

_realver=1.3.0
pkgname=xorg-font-util-git
pkgver=20130128
pkgrel=1457
pkgdesc='X.Org font utilities'
url='http://xorg.freedesktop.org/'
arch=('i686' 'x86_64')
license=('custom')
makedepends=('xorg-util-macros-git')

replaces=('font-util')
provides=('font-util' 'xorg-font-util=${_realver}')
conflicts=('font-util' 'xorg-font-util')
groups=('xorg-fonts' 'xorg')

_gitroot="git://anongit.freedesktop.org/xorg/font/util"
_gitname="util"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"


  ./autogen.sh \
      --prefix=/usr \
      --mandir=/usr/share/man \
      --with-mapdir=/usr/share/fonts/util \
      --with-fontrootdir=/usr/share/fonts \

  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}

# vim: ft=sh syn=sh et

