_realver=2.21.0
pkgname=xf86-video-intel-git
pkgver=20130205
pkgrel=0744
pkgdesc='X.org Intel i810/i830/i915/945G/G965+ video drivers'
arch=('i686' 'x86_64')
url='http://intellinuxgraphics.org/'
license=('custom')
depends=('intel-dri>=9.2.0' 'libxvmc>=1.0.7' 'libpciaccess>=0.13.1' 'libdrm>=2.4.41' 'dri2proto>=2.8' 'xcb-util' 'libxfixes>=5.0' 'udev')
makedepends=('git' 'xorg-server-devel-git' 'libx11>=1.5.0' 'xf86driproto>=2.1.1' 'glproto>=1.4.16' 'resourceproto>=1.2.0')
provides=('xf86-video-intel=${_realver}')
conflicts=('xf86-video-intel')
options=('!libtool')

_gitroot='git://anongit.freedesktop.org/xorg/driver/xf86-video-intel'
_gitname='xf86-video-intel'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"

  ./autogen.sh \
    --prefix=/usr \
    --enable-dri \
    --enable-sna \
    --enable-kms-only

  make
}

package() {
  cd "${srcdir}/${_gitname}"

  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

