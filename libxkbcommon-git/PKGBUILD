# Maintainer: Joel Teichroeb <joel@teichroeb.net>

_realver=0.2.0
_gitroot="git://anongit.freedesktop.org/xorg/lib/libxkbcommon"
_gitname="libxkbcommon"

pkgname=libxkbcommon-git
pkgver=20130402
pkgrel=0811
pkgdesc="A library to handle keyboard descriptions."
url="http://xkbcommon.org/"
arch=(i686 x86_64)
license=('custom')
makedepends=('git' 'xorg-util-macros-git' 'xkeyboard-config')
provides=('libxkbcommon=${_realver}')
replaces=('libxkbcommon')
conflicts=('libxkbcommon')
options=(!libtool)
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
# vim: ft=sh syn=sh et

