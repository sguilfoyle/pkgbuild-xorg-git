# Maintainer: dx <dx@dxzone.com.ar>
# Based on the official cairo package

pkgname=cairo-git
pkgver=20130103
pkgrel=1
pkgdesc="Cairo vector graphics library (git version)"
arch=(i686 x86_64)
license=('LGPL' 'MPL')
url="http://cairographics.org/"
depends=('libpng>=1.4.0' 'libxrender' 'fontconfig>=2.8.0' 'pixman>=0.18.4' 'xcb-util>=0.3.6' 'glib2>=2.24.0')
makedepends=('gtk-doc' 'git')
options=('!libtool')
provides=('cairo=1.10.0' 'cairo-xcb=1.10.0')
conflicts=('cairo' 'cairo-xcb')
_gitroot='git://anongit.freedesktop.org/git/cairo'
_gitname='cairo'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"



  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-xcb \
    --enable-tee \
    --enable-gl \
    --disable-static
  make
}

package(){
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
