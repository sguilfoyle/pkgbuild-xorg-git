# Maintainer: dx <dx@dxzone.com.ar>
# Based on the official cairo package

_realver=1.13.1
_gitroot='git://anongit.freedesktop.org/git/cairo'
_gitname='cairo'

pkgname=cairo-git
pkgver=20140108
pkgrel=0536
pkgdesc="Cairo vector graphics library (git version)"
arch=(i686 x86_64)
license=('LGPL' 'MPL')
url="http://cairographics.org/"
depends=('libpng>=1.4.0' 'libxrender-git' 'fontconfig>=2.8.0' 'pixman-git'
         'xcb-util-git' 'glib2>=2.24.0' 'mesa-git')
makedepends=('gtk-doc' 'git')
options=('!libtool')
provides=('cairo=${_realver}' 'cairo-xcb=${_realver}')
replaces=('cairo')
conflicts=('cairo' 'cairo-xcb')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-xcb \
    --enable-tee \
    --enable-gl \
    --enable-egl \
    --disable-static
  make
}

package(){
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et

