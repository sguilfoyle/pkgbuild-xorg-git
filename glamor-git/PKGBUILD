# Contributor: Flamelab <panosfilip at gmail dot com>

pkgname=glamor-git
_realpkgname=glamor
pkgver=20121218
pkgrel=7
pkgdesc="X.org OpenGL based 2D rendering acceleration library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
provides=("${_realpkgname}")
depends=('glibc' 'mesa' 'libdrm' 'xorg-server-devel' 'libx11')
makedepends=('glibc' 'mesa' 'khrplatform-devel' 'libdrm' 'xorg-server-devel' 'libx11' 'xf86driproto' 'glproto')
conflicts=('glamor')
options=('!libtool')
license=('custom')

_gitroot='git://anongit.freedesktop.org/xorg/driver/glamor'
_gitname="glamor"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git checkout -f && git clean -xfd && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"




  autoreconf -v --install

  ./configure --prefix=/usr

  msg "Starting make..."
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install 
}
