# Contributor: Flamelab <panosfilip at gmail dot com>

pkgname=glamor-git
pkgver=20130114
pkgrel=0746
pkgdesc="X.org OpenGL based 2D rendering acceleration library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('glibc' 'mesa-git' 'libdrm-git' 'libx11-git')
makedepends=('glibc' 'xorg-server-devel-git' 'xf86driproto-git' 'glproto-git')
conflicts=('glamor')
provides=('glamor')
options=('!libtool')
license=('custom')

_gitroot='git://anongit.freedesktop.org/xorg/driver/glamor'
_gitname="glamor"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"




  autoreconf -v --install

  ./configure --prefix=/usr

  msg "Starting make..."
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install 
}
