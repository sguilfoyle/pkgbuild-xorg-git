# Contributor: Flamelab <panosfilip at gmail dot com>

_realver=0.5.1
_gitroot='git://anongit.freedesktop.org/xorg/driver/glamor'
_gitname="glamor"

pkgname=glamor-git
pkgver=20130909
pkgrel=0721
pkgdesc="X.org OpenGL based 2D rendering acceleration library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('glibc' 'mesa-libgl-git' 'libdrm-git' 'libx11')
makedepends=('glibc' 'xorg-server-devel-git' 'xf86driproto' 'glproto')
provides=('glamor=${_realver}')
conflicts=('glamor')
options=('!libtool')
license=('custom')
source=($_gitroot)
md5sums=(SKIP)

build() {
  cd "${srcdir}/${_gitname}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

# vim: ft=sh syn=sh et

