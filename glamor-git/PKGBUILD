# Contributor: Flamelab <panosfilip at gmail dot com>

_realver=0.5.0
pkgname=glamor-git
pkgver=20130401
pkgrel=0040
pkgdesc="X.org OpenGL based 2D rendering acceleration library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('glibc' 'mesa>=9.2.0' 'libdrm>=2.4.43' 'libx11>=1.5.99.901')
makedepends=('glibc' 'xorg-server-devel-git' 'xf86driproto>=2.1.1' 'glproto>=1.4.16')
provides=('glamor=${_realver}')
conflicts=('glamor')
options=('!libtool')
license=('custom')

_gitroot='git://anongit.freedesktop.org/xorg/driver/glamor'
_gitname="glamor"

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git clean -xfd && git checkout -f && git pull origin
  else
    git clone --depth 1 ${_gitroot} ${_gitname}
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  cd "${srcdir}/${_gitname}"




  autoreconf -v --install

  ./configure --prefix=/usr

  msg "Starting make..."
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}

